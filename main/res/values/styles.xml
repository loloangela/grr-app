<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#870015</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#870015</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#870015</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#870015</item>
        <item name="android:textColorPrimary">#000000</item>
        </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#000000</item>
        </style>

    <style name="AppTheme.CustomTheme" parent="@style/Theme.AppCompat.Light">

        <item name="colorPrimary">#870015</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#870015</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.CustomToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">#000000</item>
    </style>

</resources>
