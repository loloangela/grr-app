<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="example.loloangela.GRR.MapActivity"
    tools:showIn="@layout/activity_map">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Africa"
        android:id="@+id/africa"
        android:background="@drawable/africa"
        android:layout_below="@+id/europe"
        android:layout_toStartOf="@+id/australia"
        android:layout_marginTop="30dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antarctica"
        android:id="@+id/antarctica"
        android:background="@drawable/antarctica"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/australia"
        android:layout_alignEnd="@+id/australia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asia"
        android:id="@+id/asia"
        android:background="@drawable/asia"
        android:layout_below="@id/app_bar"
        android:layout_alignTop="@+id/europe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="169dp"
        android:layout_marginStart="169dp"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Australia"
        android:id="@+id/australia"
        android:background="@drawable/austalia"
        android:layout_below="@+id/sAmerica"
        android:layout_alignRight="@+id/asia"
        android:layout_alignEnd="@+id/asia"
        android:textColor="#020202" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Europe"
        android:id="@+id/europe"
        android:background="@drawable/europe"
        android:onClick="sendMsg"
        android:textColor="#020202"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/australia"
        android:layout_toStartOf="@+id/australia"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N. America"
        android:id="@+id/nAmerica"
        android:background="@drawable/north_am"
        android:textColor="#020202"
        android:layout_alignTop="@+id/europe"
        android:layout_toStartOf="@+id/europe"
        android:layout_toLeftOf="@+id/europe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S. America"
        android:id="@+id/sAmerica"
        android:background="@drawable/south_am"
        android:layout_below="@+id/nAmerica"
        android:layout_toLeftOf="@+id/africa"
        android:layout_toStartOf="@+id/africa"
        android:textColor="#020202" />

</RelativeLayout>
